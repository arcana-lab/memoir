// =================================
// CONSTRAINT(NAME, CLASS, SOFT?)
// =================================
#ifndef CONSTRAINT
#  define CONSTRAINT(NAME, CLASS, IS_SOFT) /* No handling. */
#endif
#define CONSTRAINT_(NAME, CLASS, IS_SOFT) CONSTRAINT(NAME, CLASS, IS_SOFT)

CONSTRAINT_(ptrstable, PointerStableConstraint, false)

// =================================
// OP_CONSTRAINT(NAME, CLASS, INST, SOFT?)
// =================================
#ifndef OP_CONSTRAINT
#  define OP_CONSTRAINT(NAME, CLASS, INST, IS_SOFT)                            \
    CONSTRAINT(NAME, CLASS, IS_SOFT)
#endif
#define OP_CONSTRAINT_(NAME, CLASS, INST, IS_SOFT)                             \
  OP_CONSTRAINT(NAME, CLASS, INST, IS_SOFT)

OP_CONSTRAINT_(opread, OperationConstraint, ReadInst, false)
OP_CONSTRAINT_(opwrite, OperationConstraint, WriteInst, false)
OP_CONSTRAINT_(opinsert, OperationConstraint, InsertInst, false)
OP_CONSTRAINT_(opremove, OperationConstraint, RemoveInst, false)
OP_CONSTRAINT_(opswap, OperationConstraint, SwapInst, false)
OP_CONSTRAINT_(ophas, OperationConstraint, AssocHasInst, false)
OP_CONSTRAINT_(opfold, OperationConstraint, FoldInst, false)
OP_CONSTRAINT_(oprfold, OperationConstraint, ReverseFoldInst, false)

// =====================================
// FASTOP_CONSTRAINT(NAME, CLASS, INST, SOFT?)
// =====================================
#ifndef FASTOP_CONSTRAINT
#  define FASTOP_CONSTRAINT(NAME, CLASS, INST, IS_SOFT)                        \
    CONSTRAINT(NAME, CLASS, IS_SOFT)
#endif
#define FASTOP_CONSTRAINT_(NAME, CLASS, INST, IS_SOFT)                         \
  FASTOP_CONSTRAINT(NAME, CLASS, INST, IS_SOFT)

FASTOP_CONSTRAINT_(fastread, FastOperationConstraint, ReadInst, true)
FASTOP_CONSTRAINT_(fastwrite, FastOperationConstraint, WriteInst, true)
FASTOP_CONSTRAINT_(fastinsert, FastOperationConstraint, InsertInst, true)
FASTOP_CONSTRAINT_(fastremove, FastOperationConstraint, RemoveInst, true)
FASTOP_CONSTRAINT_(fastswap, FastOperationConstraint, SwapInst, true)
FASTOP_CONSTRAINT_(fasthas, FastOperationConstraint, AssocHasInst, true)
FASTOP_CONSTRAINT_(fastfold, FastOperationConstraint, FoldInst, true)
FASTOP_CONSTRAINT_(fastrfold, FastOperationConstraint, ReverseFoldInst, true)

// =====================================
#undef CONSTRAINT
#undef OP_CONSTRAINT
#undef FASTOP_CONSTRAINT
