#!/bin/bash

function flags {
    echo "  FLAGS:"
    echo "    --prefix     Print the installation prefix."
    echo "    --includedir Directory containing MEMOIR headers."
    echo "    --bindir     Directory containing MEMOIR executables."
    echo "    --libdir     Directory containing MEMOIR libraries."
    echo "    --cflags     C compiler flags for files that include MEMOIR headers."
    echo "    --cxxflags   C++ compiler flags for files that include MEMOIR headers."
}

if [[ $# -lt 1 ]]
then
    flags
    exit 1
fi
  

while [[ $# -gt 0 ]] ;
do
    case $1 in
        --prefix)
            echo -n "@CMAKE_INSTALL_PREFIX@"
            shift
            ;;
        --includedir)
            echo -n "@CMAKE_INSTALL_INCLUDEDIR@"
            shift
            ;;
        --bindir)
            echo -n "@CMAKE_INSTALL_BINDIR@"
            shift
            ;;
        --libdir)
            echo -n "@CMAKE_INSTALL_LIBDIR@"
            shift
            ;;
        --cflags)
            echo -n "-I@CMAKE_INSTALL_INCLUDEDIR@ -fdeclspec"
            shift
            ;;
        --cxxflags)
            echo -n "-I@CMAKE_INSTALL_INCLUDEDIR@ -fdeclspec"
            shift
            ;;
        --ldflags)
            ABSL_FLAGS=$(find @CMAKE_INSTALL_LIBDIR@ -name "libabsl_*.a" -exec sh -c "basename {} | sed 's/^lib/-l/' | sed 's/.a$//'" \; | paste -sd' ' -)
            
            ROARING_FLAGS=""
            if [[ -f @CMAKE_INSTALL_LIBDIR@/libroaring.a ]]
            then
                ROARING_FLAGS="-lroaring"
            fi
            
            echo -n " -L@CMAKE_INSTALL_LIBDIR@ -lstdc++ -Wl,--start-group ${ABSL_FLAGS} ${ROARING_FLAGS} -Wl,--end-group"
            shift
            ;;
        -h|--help)
            flags
            exit 1
            ;;
        -*|--*)
            PASSES+=("$1")
            shift
            ;;
        *)
            if [ -n "${INPUT_IR_FILE}" ] ; then
                echo "Too many positional arguments passed!"
                usage
                exit 1
            fi
            INPUT_IR_FILE=$1
            shift
            ;;
    esac
done
